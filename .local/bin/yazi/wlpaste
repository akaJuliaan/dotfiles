#!/usr/bin/env bash
set -e

# aktuelles Verzeichnis, in dem yazi gerade ist
DIR="$PWD"

# Namen abfragen
printf "Dateiname: "
read -r NAME

# Abbrechen, falls leer
[ -z "$NAME" ] && exit 1

# Befehl ausfÃ¼hren
wl-paste > "$DIR/$NAME"




